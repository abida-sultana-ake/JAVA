import java.util.Scanner;
public class Factorial
{
    public static void main (String[] args)
    {
        Scanner input = new Scanner(System.in);
        System.out.println("___Welcome to Factorial Calculator___");
        System.out.print("Please, Enter your number for the factor: ");
        int a = input.nextInt();
        int f = factorial(a);
        System.out.print("The Factorial number of " + a + " is: " + f);
    }
    public static int factorial (int num)
    {
        int fact = 1;
        for(int i=1; i<=num; i++)
        {
            fact *= i;
        }
        return fact;
    }
}
